@using OnlinePharmacyOrdaringSystem.Models

@model IEnumerable<Medicine>
@{
    
    ViewBag.Title1 = "ShowMedicine";
    ViewBag.Title2 = "SaveMedicine";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
    

    List<Category> categories = ViewBag.Category;
    List<Medicine> medicines = ViewBag.medicines;
    
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
<script src="~/Scripts/bootstrap.min.js"></script>



<div>

    <div align="center" style="font-size: 40px">Medicines</div>

    <div align="right">
        <a href="#" class="btn btn-primary" style="border-radius:20px" data-toggle="modal" data-target="#myModal">Add new medicine</a>
    </div>


    @*Popup Modal*@

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>

    }
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="modalTitle">Add new medicine</h4>
                </div>

                <div class="modal-body">
                    <form id="form">
                        <fieldset id="submitForm">

                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" id="Name" name="Name" placeholder="Name">
                            </div>

                            <div class="form-group">
                                <label for="Quantity">Quantity</label>
                                <input type="number" class="form-control" id="Quantity" name="Quantity" min="0" placeholder="Quantity">
                            </div>


                            <div class="form-group">
                                <label for="CategoryId">Category</label>
                                <select id="CategoryId" name="CategoryId" class="form-control">
                                    <option value="">Select category</option>
                                    @foreach (Category category in categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="Price">Price</label>
                                <input type="number" class="form-control" id="Price" name="Price" min="0" placeholder="0.0">
                            </div>

                            <div class="form-group">
                                <label for="imageId">Image</label>
                                <input type="file" class="form-control" id="imageId" name="ImageId">
                            </div>

                        </fieldset>
                    </form>
                </div>


                <div class="modal-footer">
                    <a href="#" class="btn btn-default"  data-dismiss="modal">Cancel</a>
                    <input type="reset" value="Save" class="btn btn-primary" id="btnSubmit" />

                </div>
            </div>
        </div>

    </div>

</div>


<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Tablet</a>
        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Capsule</a>
        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Syrup</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <div align="center">
            <h2>Tablets</h2>
            <p>Tablet(s) in stock</p>

            <div class="container" style="margin-top: 3%">

                <div class="row" align="center">

                    @foreach (Medicine medicine in ViewBag.tablets)
                    {
                        <div class="col-md-4">
                            <br />

                            <div>
                                <img style="max-width: 100px; max-height: 100px" src="~/Template/images/HomePharmaLogo2.png" />

                            </div>


                            <h4 style="text-align: center">Medicine name: @medicine.Name</h4>
                            <h6 style="text-align: center">Category: @medicine.CategoryId</h6>
                            <h6 style="text-align: center">Quantity: @medicine.Quantity</h6>
                            <h6 style="text-align: center">Price: @medicine.Price BDT</h6>

                            <div class="flex-w bo5 of-hidden w-size17">
                                <button id="down" class="btn-num-product-down color1 flex-c-m size7 bg8 eff2" onclick="down(@medicine.Id, @medicine.Quantity)">
                                    <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                </button>

                                <input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="0">

                                <button id="up" class="btn-num-product-up color1 flex-c-m size7 bg8 eff2" onclick="up(@medicine.Id, @medicine.Quantity)">
                                    <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </div>



                            <br />
                        </div>

                    }

                </div>
            </div>

          
        </div>
    </div>


    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <div align="center">
            <h2>Capsule</h2>
            <p>Capsule(s) in stock</p>
            <div class="container" style="margin-top: 3%">

                <div class="row" align="center">

                    @foreach (Medicine medicine in ViewBag.capsule)
                    {
                        <div class="col-md-4">
                            <br />

                            <div>
                                <img style="max-width: 100px; max-height: 100px" src="~/Template/images/HomePharmaLogo2.png" />

                            </div>


                            <h4 style="text-align: center">Medicine name: @medicine.Name</h4>
                            <h6 style="text-align: center">Category: @medicine.CategoryId</h6>
                            <h6 style="text-align: center">Quantity: @medicine.Quantity</h6>
                            <h6 style="text-align: center">Price: @medicine.Price BDT</h6>

                            <div class="flex-w bo5 of-hidden w-size17">
                                <button id="down" class="btn-num-product-down color1 flex-c-m size7 bg8 eff2" onclick="down(@medicine.Id, @medicine.Quantity)">
                                    <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                </button>

                                <input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="0">

                                <button id="up" class="btn-num-product-up color1 flex-c-m size7 bg8 eff2" onclick="up(@medicine.Id, @medicine.Quantity)">
                                    <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </div>



                            <br />
                        </div>

                    }

                </div>
            </div>
            
        </div>
    </div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
        <div align="center">
            <h2>Syrup</h2>
            <p>Syrup(s) in stock</p>
            <div class="container" style="margin-top: 3%">

                <div class="row" align="center">

                    @foreach (Medicine medicine in ViewBag.syrup)
                    {
                        <div class="col-md-4">
                            <br />

                            <div>
                                <img style="max-width: 100px; max-height: 100px" src="~/Template/images/HomePharmaLogo2.png" />

                            </div>


                            <h4 style="text-align: center">Medicine name: @medicine.Name</h4>
                            <h6 style="text-align: center">Category: @medicine.CategoryId</h6>
                            <h6 style="text-align: center">Quantity: @medicine.Quantity</h6>
                            <h6 style="text-align: center">Price: @medicine.Price BDT</h6>

                            <div class="flex-w bo5 of-hidden w-size17">
                                <button id="down" class="btn-num-product-down color1 flex-c-m size7 bg8 eff2" onclick="down(@medicine.Id, @medicine.Quantity)">
                                    <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                </button>

                                <input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="0">

                                <button id="up" class="btn-num-product-up color1 flex-c-m size7 bg8 eff2" onclick="up(@medicine.Id, @medicine.Quantity)">
                                    <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </div>



                            <br />
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>











    <script>


        $(document).ready(function () {

            //Add new medicine
            $("#btnSubmit").click(function () {

                var myformdata = $("#form").serialize();

                $.ajax({
                    type: "POST",
                    url: "/Medicine/SaveMedicine",
                    data: myformdata,
                    success: function () {
                        alert("Saved succesfully");
                        $("#myModal").modal("hide");
                        window.location.href = "/Medicine/ShowMedicine"
                    }

                });

            });




        });


        //Increment button function
        function up(id, quantity) {

            $.ajax({
                type: "POST",
                url: "/Medicine/IncrementQuantity",
                data: { "Id": id, "Quantity": quantity },
                success: function () {

                    alert("New quantity added");

                }

            });
            document.getElementById("Quantity").value = parseInt(document.getElementById("Quantity").value) + 1;
        }


        //Decrement button function
        function down(id, quantity) {

            $.ajax({
                type: "POST",
                url: "/Medicine/DecrementQuantity",
                data: { "Id": id, "Quantity": quantity },
                success: function () {

                    alert("One quantity removed");
                }
            });

            document.getElementById("Quantity").value = parseInt(document.getElementById("Quantity").value) - 1;

        }





    </script>
