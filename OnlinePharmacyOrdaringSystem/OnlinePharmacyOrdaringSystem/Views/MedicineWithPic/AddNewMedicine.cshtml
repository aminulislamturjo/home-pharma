<script>
    function AjaxPost(formData) {
        var ajaxConfig = {
            type: "POST",
            url: "/MedicineWithPic/SaveData",
            data: new FormData(formData),
            success: function (result) {
                alert(result);
                $("#myModal").modal("hide");
                window.location.href = "/MedicineWithPic/AddNewMedicine"
            }
        }
        if ($(formData).attr('enctype') == "multipart/form-data") {
            ajaxConfig["contentType"] = false;
            ajaxConfig["processData"] = false;
        }
        $.ajax(ajaxConfig);
        return false;
    }


    //Increment button function
    function up(id, quantity) {

        $.ajax({
            type: "POST",
            url: "/MedicineWithPic/IncrementQuantity",
            data: { "Id": id, "Quantity": quantity },
            success: function () {

                //alert("New quantity added");

            }

        });
        document.getElementById("Quantity").value = parseInt(document.getElementById("Quantity").value) + 1;
    }


    //Decrement button function
    function down(id, quantity) {

        $.ajax({
            type: "POST",
            url: "/MedicineWithPic/DecrementQuantity",
            data: { "Id": id, "Quantity": quantity },
            success: function () {

                //alert("One quantity removed");
            }
        });

        document.getElementById("Quantity").value = parseInt(document.getElementById("Quantity").value) - 1;

    }

</script>

